{
  "name": "kibela-vscode",
  "displayName": "Kibela",
  "description": "Kibela integration for VS Code",
  "version": "2.1.3",
  "publisher": "kiwamizamurai-vscode",
  "author": {
    "name": "kiwamizamurai",
    "url": "https://github.com/kiwamizamurai"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiwamizamurai/vscode-kibela"
  },
  "bugs": {
    "url": "https://github.com/kiwamizamurai/vscode-kibela/issues"
  },
  "homepage": "https://github.com/kiwamizamurai/vscode-kibela#readme",
  "keywords": [
    "kibela",
    "markdown",
    "notes",
    "documentation",
    "wiki"
  ],
  "galleryBanner": {
    "color": "#C2185B",
    "theme": "dark"
  },
  "icon": "media/kibela.png",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "kibela-explorer": [
        {
          "id": "searchResults",
          "name": "Kibela Search Results",
          "type": "tree"
        },
        {
          "id": "myNotes",
          "name": "NOTES",
          "type": "tree"
        },
        {
          "id": "kibelaGroups",
          "name": "Kibela Groups"
        }
      ]
    },
    "commands": [
      {
        "command": "kibela.authenticate",
        "title": "Kibela: Authenticate"
      },
      {
        "command": "kibela.showSearch",
        "title": "Search Kibela Notes",
        "icon": "$(search)"
      },
      {
        "command": "kibela.refreshGroups",
        "title": "Refresh Groups",
        "icon": "$(refresh)"
      },
      {
        "command": "kibela.refreshNotes",
        "title": "Refresh Notes",
        "icon": "$(refresh)"
      },
      {
        "command": "kibela.refreshSearchResults",
        "title": "Refresh Search Results",
        "icon": "$(refresh)"
      },
      {
        "command": "kibela.openNote",
        "title": "Open Note"
      }
    ],
    "configuration": {
      "title": "Kibela",
      "properties": {
        "kibela.team": {
          "type": "string",
          "description": "Your Kibela team name"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kibela-explorer",
          "title": "Kibela",
          "icon": "media/kibela.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "kibela.showSearch",
          "when": "view == searchResults",
          "group": "navigation"
        },
        {
          "command": "kibela.refreshSearchResults",
          "when": "view == searchResults",
          "group": "navigation"
        },
        {
          "command": "kibela.refreshNotes",
          "when": "view == myNotes",
          "group": "navigation"
        },
        {
          "command": "kibela.refreshGroups",
          "when": "view == kibelaGroups",
          "group": "navigation"
        },
        {
          "command": "kibela.authenticate",
          "when": "!kibela:authenticated && viewContainer == kibela-explorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "lint:fix": "biome lint --write .",
    "check:fix": "biome check --apply .",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^16.x",
    "@types/vscode": "^1.86.0",
    "@types/ws": "^8.5.14",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.24.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "graphql": "^16.10.0",
    "graphql-request": "^5.2.0",
    "marked": "^4.0.0"
  }
}